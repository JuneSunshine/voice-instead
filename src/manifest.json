{
  "name": "Voice Instead",
  "version": "15.7.6.22",
  "manifest_version": 2,
  
  "permissions": [
    "<all_urls>",
    "contextMenus", 
    "tabs"
  ],
  
  "web_accessible_resources": [
    "loader.gif"
  ],

  "icons": {
           "48": "icon48.png",
          "128": "icon.png" },

  "description": "Yet another TTS(text to speech) extension, using very good voice API in natrual human voice.",

  "background": {
    "scripts": ["menu.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
	  "css": ["css_file.css"],
      "all_frames": false,
      "js": ["jquery.min.js","jquery.jplayer.js","content.js"]
    }
  ]
}
